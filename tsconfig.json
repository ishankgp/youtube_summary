{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./frontend/*"],
      "@/components/*": ["./frontend/components/*"],
      "@/components/ui/*": ["./frontend/components/ui/*"],
      "@/lib/*": ["./frontend/lib/*"],
      "@/app/*": ["./frontend/app/*"]
    },
    "baseUrl": "."
  },
  "include": ["frontend/next-env.d.ts", "frontend/**/*.ts", "frontend/**/*.tsx", "frontend/.next/types/**/*.ts"],
  "exclude": ["node_modules"]
} 